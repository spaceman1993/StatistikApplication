<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_marginLeft"
    android:paddingRight="@dimen/activity_horizontal_marginRight"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="de.szut.statistikapp.activities.NewSpielerActivity" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center" >

        <TextView
            android:id="@+id/überschrift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spieler"
            style="@style/ueberschrift_text" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:text="FOTO"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:onClick="spielerFoto_click"
            android:layout_width="0dp" />

        <Button
            android:id="@+id/addbutton"
            android:text="Spieler hinzufügen"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="spielerAdd_click" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/body"
        android:layout_below="@id/header"
        android:layout_above="@id/footer"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

       <LinearLayout
           android:layout_height="fill_parent"
           android:layout_width="0dp"
           android:layout_weight="0.2">

           <SeekBar
               android:id="@+id/spielerGroesseSeekBar"
               android:layout_width="350dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginLeft="-160dp"
               android:rotation="270"
               android:max="100"/>

       </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1.0">

            <TextView
                android:layout_height="wrap_content"
                android:text="VORNAME:"
                android:gravity="bottom"
                android:paddingTop="10dp"
                style="@style/body_text"/>

            <EditText
                android:id="@+id/spielerVorname"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:inputType="text|textCapSentences"/>


            <TextView
                android:layout_height="wrap_content"
                android:text="NACHNAME:"
                android:gravity="bottom"
                android:paddingTop="10dp"
                style="@style/body_text"/>

            <EditText
                android:id="@+id/spielerNachname"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:inputType="text|textCapSentences"/>

            <LinearLayout
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:gravity="center">

                <TextView
                    android:layout_height="wrap_content"
                    android:text="POSITION:"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    style="@style/body_text"/>

                <Button
                    android:id="@+id/wählen_click"
                    android:text="Wählen"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.78"
                    android:onClick="positionWählen_click"
                    android:layout_width="0dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1.5"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_height="0dp"
                        android:text="GRÖßE:"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:textSize="15sp"
                        android:gravity="start|bottom"
                        style="@style/body_text"/>

                    <TextView
                        android:id="@+id/spielerGroesse"
                        android:layout_height="0dp"
                        android:text="150"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:textSize="15sp"
                        android:gravity="start|top"
                        style="@style/body_text"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_height="0dp"
                        android:text="TRIKONR:"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:textSize="15sp"
                        android:gravity="end|bottom"
                        style="@style/body_text"/>

                    <TextView
                        android:id="@+id/spielerTrikonummer"
                        android:layout_height="0dp"
                        android:text="1"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:textSize="15sp"
                        android:gravity="end|top"
                        style="@style/body_text"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:layout_weight="0.2">

                <SeekBar
                    android:id="@+id/spielerTrikonummerSeekBar"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-152dp"
                    android:rotation="270"
                    android:max="98"/>

            </LinearLayout>

        </LinearLayout>

</RelativeLayout>
